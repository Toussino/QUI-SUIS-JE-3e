<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:gravity="center"
    android:background="@drawable/background0"
    tools:context=".SplashCrine">






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:gravity="center"
        android:orientation="vertical">



    <Button
        android:layout_width="match_parent"
        android:id="@+id/revise1"
        android:layout_height="55dp"
        android:text="JE REVISE MES COURS DE SVT"
        android:background="#FFFF"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="16dp"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/teste"
        android:text="JE TESTE MON NIVEAU EN SVT"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:background="#FFFF"
        android:textSize="16dp"

        />
    <Button
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_height="55dp"
        android:id="@+id/astuce"
        android:text="ASTUCES"
        android:layout_marginTop="15dp"
        android:background="#FFFF"
        android:textSize="16dp"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="NOTER L' APPLICATION"
        android:id="@+id/noter"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:background="#FFFF"
        android:textSize="16dp"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="A PROPOS"
        android:layout_marginTop="15dp"
        android:id="@+id/propos"
        android:background="#FFFF"
        android:textStyle="bold"
        android:textSize="16dp"

        />



    </LinearLayout>




    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-4368197516288969/2094573856">
    </com.google.android.gms.ads.AdView>







</RelativeLayout>
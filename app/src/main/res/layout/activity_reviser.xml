<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background0"
    tools:context=".Reviser">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/design"
            android:padding="20dp"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Button
                android:id="@+id/test1"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="25dp"
                android:background="#FFFF"
                android:text="LE SQUELETTE-LES ARTICULATIONS-LES OS"
                android:textSize="16dp"
                android:textStyle="bold">

            </Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:background="#FFFF"
                android:text="LES MUSCLES"
                android:id="@+id/muscle"
                android:textSize="16dp"
                android:textStyle="bold">

            </Button>

            <Button
                android:layout_width="match_parent"
                android:id="@+id/system_nerveux"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:background="#FFFF"
                android:text="LE SYSTEME NERVEUX"
                android:textSize="16dp"
                android:textStyle="bold">

            </Button>

            <Button
                android:layout_width="match_parent"
                android:id="@+id/oeil"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:background="#FFFF"
                android:text="L'OEIL"
                android:textSize="16dp"
                android:textStyle="bold">

            </Button>

            <Button
                android:layout_width="match_parent"
                android:id="@+id/aliment"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:background="#FFFF"
                android:text="LES ALIMENTS"
                android:textSize="16dp"
                android:textStyle="bold">

            </Button>


            <Button
                android:layout_width="match_parent"
                android:id="@+id/sang"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:background="#FFFF"
                android:text="LE SANG-LES GROUPES SANGUINS-LES ANOMALIES"
                android:textSize="16dp"
                android:textStyle="bold">

            </Button>


            <Button
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:id="@+id/circulatoire"
                android:layout_marginTop="15dp"
                android:background="#FFFF"
                android:text="L'APPAREIL CIRCULATOIRE"
                android:textSize="16dp"
                android:textStyle="bold">

            </Button>

            <Button
                android:layout_width="match_parent"
                android:id="@+id/respiratoire"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:background="#FFFF"
                android:text="L'APPAREIL RESPIRATOIRE"
                android:textSize="16dp"
                android:textStyle="bold">

            </Button>

            <Button
                android:layout_width="match_parent"
                android:id="@+id/urinaire"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:background="#FFFF"
                android:text="L'APPAREIL URINAIRE-L'EXCRETION"
                android:textSize="16dp"
                android:textStyle="bold">

            </Button>

            <Button
                android:layout_width="match_parent"
                android:id="@+id/caracteristique"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:background="#FFFF"
                android:text="LES CARACTERISTIQUES SEXUELS DE L'HOMME ET DE LA FEMME"
                android:textSize="16dp"
                android:textStyle="bold">

            </Button>

            <Button
                android:layout_width="match_parent"
                android:id="@+id/maternite"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:background="#FFFF"
                android:text="LA MATERNITE-LA CONTRACEPTION-L'AVORTEMENT"
                android:textSize="16dp"
                android:textStyle="bold">

            </Button>

            <Button
                android:layout_width="match_parent"
                android:id="@+id/maladie"
                android:background="#FFFF"
                android:layout_marginTop="15dp"
                android:textSize="16dp"
                android:text="LES MALADIES"
                android:textStyle="bold"
                android:layout_height="55dp">

            </Button>

            <Button
                android:layout_width="match_parent"
                android:id="@+id/fleaux"
                android:background="#FFFF"
                android:layout_marginTop="15dp"
                android:textSize="16dp"
                android:text="LES FLEAUX SOCIAUX"
                android:textStyle="bold"
                android:layout_height="55dp">

            </Button>



        </LinearLayout>


    </ScrollView>






</LinearLayout>